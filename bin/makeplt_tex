#!/bin/sh
PLTNAME=$(basename $1)
DIR=$(dirname $1)
gnuplot<<EOF
cd "$DIR"
set terminal epslatex color 
set output "${PLTNAME%plt}tex"
load "$PLTNAME"
EOF


cat << EOS > build/main.tex
\documentclass[a4j,10pt]{jsarticle}
 
\usepackage[dvipdfmx]{graphicx}
 
\begin{document}
\begin{figure}[htb]
	\centering
	\input{${PLTNAME%plt}tex}
	\caption{${PLTNAME%.plt}}
	\label{fig:${PLTNAME%.plt}}
\end{figure}
 
\end{document}
EOS

mv ${PLTNAME%plt}eps ${PLTNAME%plt}tex main.tex source
cd source

platex main.tex
dvipdfmx main.dvi

mv main.pdf ..
